<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="container">
    <div class="form-inputs">
      <%= f.input :title, label: "What is your label" %>
      <%= f.input :date_of_birth, label: "D.O.B" %>
      <%= f.input :description, placeholder: 'Add description here' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
